@page "/preventdefault/example1"

Solo permite el símbolo + <input value="@Count" @onkeypress="KeyHandler" @onkeypress:preventDefault/>

@code{
  int Count = 0;

  private void KeyHandler(KeyboardEventArgs e)
  {
    if (e.Key == "+")
    {
      Count++;
    }
    else if (e.Key == "-")
    {
      Count--;
    }
  }
}