@page "/listas/ejemploA"
<!-- CABECERA -->
<div>
  <div class="form-group row">
    <label for="txtNombre" class="col-sm-2 col-form-label">Nombre </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="txtNombre" placeholder="Nombre">
    </div>
  </div>
</div>

<br />

<!-- DETALLE -->
<button @onclick="Agregar">Agregar</button>

<div class="form-row">
  <div class="col">
    <label>Nombre</label>
  </div>
  <div class="col">
    <label>Edad</label>
  </div>
  <div class="col">
    <label>Salario</label>
  </div>
</div>
@foreach (var item in PersonasList)
{
  <div class="form-row">
    <div class="col">
      <input type="text" class="form-control" placeholder="Nombre" @bind="item.Nombre">
    </div>
    <div class="col">
      <input type="text" class="form-control" placeholder="Edad" @bind="item.Edad">
    </div>
    <div class="col">
      <input type="text" class="form-control" placeholder="Salario" @bind="item.Salario">
    </div>
  </div>
}
<p>
    Items: <label>@PersonasList.Count</label>
</p>

@code{

  List<Persona> PersonasList { get; set; }

  protected override async Task OnInitializedAsync()
  {
    PersonasList = new List<Persona>();
    //PersonasList.Add(new Persona() { PersonaId = 1, Nombre = "Sebastian Bach" });
    //PersonasList.Add(new Persona() { PersonaId = 2, Nombre = "Johanes Beethoven" });
  }

  void Agregar()
  {
    PersonasList.Add(new Persona());
  }


  class Persona
  {
    public int PersonaId { get; set; }
    public string Nombre { get; set; }
    public int Edad { get; set; }
    public decimal Salario { get; set; }
  }
}